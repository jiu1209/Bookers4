<div class="container"> 
      <div class="row"> 
      	<div class="col-xs-3">
            <div class="tl">
            	 <h2>User info</h2>
               <div class="fy">
                <%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback:"no image.jpg", size: "80x80" %>
             </div>
              <table class="table">
                <tr>
                 <th>name : <%= @user.name %></th>
                </tr>
              </table>
              <table class="table">
                <tr>
                 <th>introduction : <%= @user.introduction %></th>
                </tr>
              </table>
                   <button type="button" class="btnbtn-default btn-sm">
                   <span class="glyphicon glyphicon-wrench"></span>
                   <%= link_to "Wrench", edit_user_path(@user.id) %></button>
            </div>
           <div class="top">

            <%= form_for(@book) do |f| %>
            <%= render 'layouts/bookerror_massages', model: f.object %>
            <div class="field row">
            <h2>New book</h2>
 
            <h4>title</h4>
            <%= f.text_field :title %>
          </div>

             <div class="field row"> 
            <h4>Opinion</h4>
             <%= f.text_area :body %>
           </div>
 
             <br><%= f.submit 'Create Book',class:"btn btn-primary"%></br>
            <% end %>
           </div>
          </div>
          <div class="col-xs-9">
            <div class=de>
              <h2>Books</h2> 
            </div>
              <table class="table">
	            <thead>
	              <tr>
               <th></th>   
		          <th>title</th>
		          <th>Opinion</th>
	              </tr>
	            </thead>
	
	         <tbody>
		        <% @books.each do |book| %>
	             <tr> 
                <td><%= link_to user_path(book.user.id) do %>
                  <%=  attachment_image_tag book.user,  :profile_image, format: "jpeg", fallback:"no image.jpg", size: "40x40" %></td>
                <% end %>
	    	     <td><%= link_to book.title, book_path(book.id)  %></td>
	    	     <td><%= book.body %></td>
                 </tr>
              <% end %>
             </tbody>
             </table>
           </div>
         </div>
       </div>
       <div class="top2">
       <p>CopyRight Infratop.inc</p>
     </div>