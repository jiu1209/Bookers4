<div class="sks">
<%= flash[:complete] %>  

  <p id="notice"><%= notice %></p>
</div>
<div class="container"> 
      <div class="row"> 
      	  <div class="col-xs-3">
      	  	<div class="tl">
              <h2>User info</h2>
              <div class="fy">
               <%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback:"no image.jpg", size: "80x80" %>
             </div>
             <table class="table">
              <tr>
               <th>name : <%= @user.name %></th>
              </tr>
            </table>
            <table class="table">
              <tr>
      		    <th>introduction : <%= @user.introduction %></th>
            </tr>
            <tr>
               <% if user_signed_in? && @user !=current_user %>
              <th>follows : <%= link_to @user.follower.count,  user_follows_path(@user.id) %></th>
            </tr>
            <tr>
              <th>followers : <%= link_to @user.followed.count,  user_followers_path(@user.id) %></th>
            </tr>
             <tr>
               <th><% if current_user.following?(@user) %>
                 <%= link_to 'フォロー外す', unfollow_path(@user.id), class: 'btn btn-primary ', method: :POST %>
              <% else %>
                 <%= link_to 'フォローする', follow_path(@user.id), class: 'btn btn-success ', method: :POST %>
              </th>
              <% end %>
              <% end %>
            </tr>
          </table>

                <% if user_signed_in?  %>
                 <button type="button" class="btnbtn-default btn-sm">
                 <span class="glyphicon glyphicon-wrench"></span>
                 <%= link_to "Wrench",edit_user_path %></button>
                 <% end %>
      		 </div>
            <div class="top">

              <%= form_for(@book) do |f| %>
              <div class="field row">
              <h2>New book</h2>
 
              <h4>title</h4>
              <%= f.text_field :title %>
            </div>
               <div class="field row">
              <h4>Opinion</h4>
              <%= f.text_area :body %>
            </div>
 
             <br><%= f.submit 'Create Book', class:"btn btn-primary" %></br>
            <% end %>
           </div>
          </div>
      	    <div class="col-xs-9">
              <div class=de>
              <h2>Books</h2> 
            </div>
               <table class="table">
	            <thead>
	              <tr>
                <th></th>
		            <th>Title</th>
		            <th>Opinion</th>
	              </tr>
	            </thead>
	
                <tbody>
		       <% @books.each do |book| %>
	             <tr>
             <td><%= link_to attachment_image_tag @user, :profile_image, format: "jpeg", fallback:"no image.jpg", size: "40x40" %></td>
	    	       <td><%= link_to book.title, book_path(book.id) %></td>
                   <td><%= book.body %></td>
                 </tr>
                 <% end %>
                </tbody>
               </table>
              </div>
           </div>
